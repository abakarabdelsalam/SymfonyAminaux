{% extends 'base.html.twig' %}

{% block title %}Familles
{% endblock %}
{% block monTitle %}famille
	{{famille.libelle}}
{% endblock %}
{% block body %}
	<div class="container">
		<a href="{{ path('familles',{'id': famille.id}) }}">{{famille.libelle|capitalize }}</a>
	</h2>
	<div>{{famille.description}}</div>
	<br>
	<div class="row">
		{% for animal in famille.animaux %}
			<div class="col-6">
				<div class="row align-item-center">
					<div class="col-12 cold-md-6 col-lg-2 text-center">
						<img src="{{asset('images/' ~ animal.image)}}" class="img-fluid">
					</div>
					<div class="col text-center">
						<h2>
							<a href="{{ path('aficherAnimal', {'id' : animal.id }) }}">
								{{ animal.nom }}
							</a>
						</h2>
						<div>{{ animal.description }}</div>
						<div>
							{% for continent in animal.continents  %}


								<a href="{{path('afficherContinent', {'id': continent.id})}}" class="btn btn-secondary">{{continent.libelle}}</a>


							{% endfor %}
						</div>

					</div>
				</div>
			</div>
		{% endfor %}
	</div>
</div>{% endblock %}
