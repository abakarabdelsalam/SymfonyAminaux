{% extends 'base.html.twig' %}

{% block title %}Personnes
{% endblock %}


{% block monTitle %}Je m'appelle :
	{{personne.nom}}

{% endblock %}

{% block body %}
	<div class="container">
		<h3>Voici les animaux que je poss√®de :
		</h3>
		<br>
		{% for dispose in personne.disposes %}

			<div class="row align-items-center">
				<div class="col-2">
					<img src="{{asset('images/' ~ dispose.animal.image)}}">
				</div>
				<br>

				<div class="col">
					<h2>
						<a href="{{path('aficherAnimal', {'id' : dispose.animal.id} )}} ">{{dispose.animal.nom}}</a>

					</h2>
					<div class="btn btn-info">Nombre :
						{{dispose.nb}}</div>
				</div>
			</div>


		{% endfor %}


	</div>
{% endblock %}
